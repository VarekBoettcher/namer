{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [ "./node_modules/@types" ]
  },

  "files": [
    "namer/namer.component.ts",
    "namer/namer.module.ts",
    "namer/namer.service.ts",
    "namer/validator.service.ts",
    "main.ts"
  ],

  "angularCompilerOptions": {
   "genDir": "aot",
   "debug" : false,
   "skipMetadataEmit": true
  },

  "compileOnSave": false,
  "buildOnSave": false
}
